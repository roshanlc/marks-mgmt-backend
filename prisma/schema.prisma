// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Role for a user
enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model users {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  activated Boolean @default(false)
  expired   Boolean @default(false)
  role      Role
}
